<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1EE"
    tools:context=".Community.Community_certify">

    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_span="3"
                android:gravity="center"
                android:text="따끈따근한 실천 ❤"
                android:layout_margin="7dp"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="64dp">

            <ImageView
                android:id="@+id/Fimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                tools:ignore="InvalidId" />

            <ImageView
                android:id="@+id/Fimage2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                tools:ignore="InvalidId" />

            <ImageView
                android:id="@+id/Fimage3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                tools:ignore="InvalidId" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/Fimage4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                tools:ignore="InvalidId" />
            <ImageView
                android:id="@+id/Fimage5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                tools:ignore="InvalidId" />

            <ImageView
                android:id="@+id/Fimage6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                tools:ignore="InvalidId" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <!--
            <Button
                android:id="@+id/addBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:text="이미지 등록"
                android:textColor="#1F9B00"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:text="저장"
                android:textColor="#1F9B00"
                android:textSize="20dp"/>
                -->

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#FFFFFF"
                android:text="닫기"
                android:textColor="#1F9B00"
                android:textSize="20dp"/>
        </LinearLayout>



    </LinearLayout>


</ScrollView>