<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:background="@drawable/layout_background_white"
    android:backgroundTint="#FFFFFF"
    android:elevation="10sp"
    android:minWidth="300dp"
    android:minHeight="450dp"
    tools:context=".Home.HomeMissionCertification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/certification_addBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/background_color"
            android:text="🗂️사진불러오기"
            android:textColor="@color/black"
            app:iconPadding="0dp" />

        <ImageView
            android:id="@+id/certification_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:background="@drawable/layout_background"
            android:scaleType="centerInside"
            android:src="@drawable/gallery" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위 사진을 "
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/certification_missionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="텀블러 사용하기"
                android:textColor="@color/text_color1"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="인증할까요?"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="실천 인증 커뮤니티에 게시(+20p)"
                android:textSize="10sp" />

            <Switch
                android:id="@+id/upload_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#009688"
                android:checked="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/certification_yesBtn"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginRight="5sp"
                android:backgroundTint="@color/background_gradient_end"
                android:text="네!"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/certification_noBtn"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5sp"
                android:backgroundTint="@color/background_gradient_end"
                android:text="아니요"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:iconPadding="0dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>